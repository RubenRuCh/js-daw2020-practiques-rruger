{
    "parserOptions": {
        "ecmaVersion": 2018
    },

    "env": {
        "es6": true,
		"node": true,
		"mocha": true,
		"jest": true
	},
	"extends": [
	  "standard",
	  "plugin:prettier/recommended"
	],
  
	"plugins": ["prettier"],
  
	"rules": {
	  "prettier/prettier": "error",
      "no-console": "off", 
      "no-use-before-define": "warn", 
	  "spaced-comment": "warn",
	  "semi": "off"
	}
  }
